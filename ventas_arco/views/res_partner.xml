<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <record id="res_partner_inherit_ventas_arco" model="ir.ui.view">
    <field name="name">res.partner.inherit.ventas.arco</field>
    <field name="model">res.partner</field>
    <field name="inherit_id" ref="base.view_partner_form"/>
    <field name="arch" type="xml">

      <xpath expr="//group[@name='purchase']" position="after">
          <group name="poliza" string="PÃ³liza">
              <field name="aseguradora"/>
              <field name="noDePoliza"/>
          </group>
      </xpath>

      <xpath expr="//group[@name='accounting_entries']" position="before">
          <group name="facturacion" string="FacturaciÃ³n">
              <field name="l10n_mx_edi_payment_method_id"/>
              <field name="l10n_mx_edi_usage"/>
          </group>
      </xpath>


      <xpath expr="//field[@name='property_product_pricelist']" position="after">
        <field name="permisionario_id" domain="[('category_id','ilike','PERMISIONARIO')]"/>
      </xpath>

      

    </field>
  </record>
  
  <record id="res_partner_inherit_ventas_arco2" model="ir.ui.view">
    <field name="name">res.partner.inherit.ventas.arco2</field>
    <field name="model">res.partner</field>
    <field name="inherit_id" ref="base_address_extended.view_partner_structured_form"/>
    <field name="arch" type="xml">

      <xpath expr="//label[@for='street_number']" position="attributes">
        <attribute name="string">Exterior</attribute>
      </xpath>

      <xpath expr="//label[@for='street_number2']" position="attributes">
        <attribute name="string">Interior</attribute>
      </xpath>

      

    </field>
  </record>
</odoo>